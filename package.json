{
  "name": "songbirdz-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Back-End for the Songbirdz NFT Collection",
  "main": "index.js",
  "scripts": {
    "start-server": "npm run deploy-local; npm run populate-local; NODE_ENV=development DEBUG=* node ./server/bin/www",
    "start-blockchain": "NODE_ENV=development npx hardhat node",
    "compile-contracts": "NODE_ENV=development npx hardhat compile",
    "test-contracts": "NODE_ENV=development npx hardhat test",
    "deploy-local": "NODE_ENV=development npx hardhat run ./scripts/solidity/deployContract.js --network base-local",
    "populate-local": "NODE_ENV=development npx hardhat populateCollection --network base-local",
    "verify-local": "NODE_ENV=development npx hardhat verify --network base-local 0x5fbdb2315678afecb367f032d93f642f64180aa3",
    "deploy-testnet": "NODE_ENV=staging npx hardhat run ./scripts/solidity/deployContract.js --network base-sepolia",
    "verify-testnet": "NODE_ENV=staging npx hardhat verify --network base-sepolia <deployed-address> <owner>",
    "populate-testnet": "NODE_ENV=staging npx hardhat populateCollection --network base-sepolia",
    "start-server-testnet": "NODE_ENV=staging DEBUG=* pm2 start ./server/bin/www --name backend",
    "deploy-mainnet": "NODE_ENV=production npx hardhat run ./scripts/solidity/deployContract.js --network base-mainnet",
    "verify-mainnet": "NODE_ENV=production npx hardhat verify --network base-mainnet <deployed address> <owner>",
    "populate-mainnet": "NODE_ENV=production npx hardhat populateCollection --network base-mainnet"
  },
  "keywords": [],
  "author": "dry-tortuga",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ledger": "^1.0.1",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "chai": "^4.3.4",
    "hardhat": "^2.19.1",
    "openai": "^4.4.0",
    "truffle": "^5.4.29"
  },
  "dependencies": {
    "@api/opensea": "file:.api/apis/opensea",
    "@opensea/stream-js": "^0.1.3",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/merkle-tree": "^1.0.5",
    "alchemy-sdk": "^3.3.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "ethers": "^6.11.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "mongodb": "6.7",
    "morgan": "~1.9.1",
    "node-localstorage": "^3.0.5",
    "ws": "^8.17.0"
  }
}
